<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="550.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.controller.AccountDetailsController">
   <top>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button mnemonicParsing="false" onAction="#backButtonClicked" text="Back" translateX="2.0" />
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                   <Label layoutX="10.0" layoutY="6.0" text="SALDO : "/>
                   <Label fx:id="balance" layoutY="6.0" layoutX="65.0"/>
               </children>
            </AnchorPane>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </GridPane>
   </top>
    <center>
        <TableView fx:id="transactionsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" style="-fx-alignment: center" >
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" style="-fx-alignment: center" />
                <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Price" style="-fx-alignment: center" />
                <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" style="-fx-alignment: center" />
                <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="Description" style="-fx-alignment: center" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <left>
      <VBox prefHeight="460.0" prefWidth="150.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane prefHeight="25.0" prefWidth="150.0">
               <children>
                  <Label layoutX="47.0" layoutY="5.0" text="Kategorie" />
               </children>
            </AnchorPane>
            <TreeView fx:id="categoryTreeView" prefHeight="435.0" prefWidth="150.0" />
         </children>
      </VBox>
   </left>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="150.0" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </opaqueInsets>
            <children>

                <Button fx:id="addButton" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addButtonClicked" text="Add">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin></Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </VBox>
    </right>
</BorderPane>
